<section id="hero" class="light">

    <div class="" id="video-container">
      <video autoplay loop class="fillWidth" id="video">
        <source src="<%= asset_path 'main.mp4' %>" type="video/mp4"/>
        <source src="<%= asset_path 'main.ogg' %>" type="video/ogg"/>
        <source src="<%= asset_path 'main.webm' %>" type="video/webm"/>
      </video>
    </div>
     <div class="home-bg">
     <div class="hero-content" style="top: 30%">
<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <h2>Register for HackThe.University</h2>
    <div class="panel panel-default" style="background: rgba(0,0,0,0.2);">
      <div class="panel-body">



<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :name, label: 'Your name', required: true, autofocus: true %>
    <%= f.input :email, label: 'Your email', required: true %>
    <%= f.input :password, label: 'Pick a password', required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Register for HackThe.University" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
</div>
</div></div>
</section>
