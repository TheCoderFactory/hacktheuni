<section id="hero" class="light">

    <div class="" id="video-container">
      <video autoplay loop class="fillWidth" id="video">
        <source src="<%= asset_path 'main.mp4' %>" type="video/mp4"/>
        <source src="<%= asset_path 'main.ogg' %>" type="video/ogg"/>
        <source src="<%= asset_path 'main.webm' %>" type="video/webm"/>
      </video>
    </div>
     <div class="home-bg">
     <div class="hero-content" style="top: 30%">
<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <h2>Sign in to HackThe.University</h2>
  <h4>Or <%= link_to "Register", new_registration_path(resource_name) %></h4>
    <div class="panel panel-default" style="background: rgba(0,0,0,0.2);">
      <div class="panel-body">


<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div></div></div></div></div></div></section>